{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "kanopi/services",
  "version": "1.0.0",
  "title": "Services",
  "category": "layout",
  "icon": "admin-tools",
  "description": "A section to display services with icons, titles, and descriptions.",
  "supports": {
    "html": false,
    "align": true,
    "color": {
      "background": true,
      "text": true
    },
    "spacing": {
      "padding": true,
      "margin": true
    }
  },
  "attributes": {
    "services": {
      "type": "array",
      "default": [
        {
          "imageId": 0,
          "imageUrl": "",
          "title": "Service 1",
          "cardType": "green"
        },
        {
          "imageId": 0,
          "imageUrl": "",
          "title": "Service 2",
          "cardType": "green"
        },
        {
          "imageId": 0,
          "imageUrl": "",
          "title": "Service 3",
          "cardType": "green"
        }
      ]
    },
    "title": {
      "type": "string",
      "default": "Our Services"
    },
    "description": {
      "type": "string",
      "default": "We offer a wide range of services to help your business grow."
    }
  },
  "example": {
    "attributes": {
      "title": "Our Services",
      "description": "We offer a wide range of services to help your business grow.",
      "services": [
        {
          "imageId": 0,
          "imageUrl": "",
          "title": "Web Development",
          "cardType": "green"
        },
        {
          "imageId": 0,
          "imageUrl": "",
          "title": "Design",
          "cardType": "black"
        },
        {
          "imageId": 0,
          "imageUrl": "",
          "title": "Consulting",
          "cardType": "gray"
        }
      ]
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-style.css"
}
