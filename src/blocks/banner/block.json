{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "kanopi/banner",
  "version": "1.0.0",
  "title": "Banner",
  "category": "media",
  "icon": "format-image",
  "description": "A banner with text and background image.",
  "supports": {
    "html": false,
    "align": true,
    "color": {
      "background": true,
      "text": true
    },
    "spacing": {
      "padding": true,
      "margin": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "source": "html",
      "selector": "h2",
      "default": "Let's make things happen"
    },
    "content": {
      "type": "string",
      "source": "html",
      "selector": "p",
      "default": "Contact us today to learn more about how our digital marketing services can help your business grow and succeed online."
    },
    "backgroundImg": {
      "type": "string",
      "default": ""
    },
    "backgroundImgID": {
      "type": "number",
      "default": 0
    },
    "foregroundImg": {
      "type": "string",
      "default": ""
    },
    "foregroundImgID": {
      "type": "number",
      "default": 0
    },
    "buttonText": {
      "type": "string",
      "default": "Get your free proposal"
    },
    "buttonUrl": {
      "type": "string",
      "default": "#"
    },
    "textColor": {
      "type": "string",
      "default": "#000000"
    },
    "textAlign": {
      "type": "string",
      "default": "left"
    },
    "backgroundColor": {
      "type": "string",
      "default": "#f5f5f5"
    }
  },
  "example": {
    "attributes": {
      "title": "Banner Title",
      "content": "This is an example banner with text and background image.",
      "backgroundImg": "https://s.w.org/images/core/5.3/Windbuchencom.jpg"
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-style.css"
}
